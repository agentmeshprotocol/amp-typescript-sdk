{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["vitest/globals", "node", "@types/jest"],
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "vitest.config.ts",
    "vitest.integration.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}